.graph
	padding 1em
	@media  screen and (min-width:320px) and (max-width:767px)
		padding-top 0.1em
	background rgba(0,0,0,.2)
	.chart-row
		display flex
		width 100%
		margin 15px 0
		box-sizing border-box
		cursor pointer
		@media  screen and (min-width:320px) and (max-width:767px)
			flex-direction column
		&__name
			color #b4bbc5
			@media  screen and (min-width:320px) and (max-width:767px)
				order 1
				padding-top 0.5em
		&:hover
			.chart-row__name
				color #FFF
			.chart-row__bar
				background #01ffeb
				box-shadow 1.2px 1px 0px 0 #01AFA3, 2px 2px 0px 0 #01AFA3, 2px 3px 0px 0 #01AFA3, 3px 3px 0px 0 #01AFA3, 3px 4px 0px 0 #01AFA3, 4px 5px 0px 0 #01AFA3, 4px 4px 0px 0 #01AFA3, 4px 5px 0px 0 #01AFA3
		&__name
			flex-basis 30%
			min-width 30%
			overflow hidden
			text-wrap nowrap
			font-size 0.8em
			display flex
			flex-direction column
			justify-content center
			text-align left
			@media  screen and (min-width:320px) and (max-width:767px)
				flex-direction column
				padding 1em 0 0 0
				overflow visible
		.bar_container
			display flex
			align-items center
			justify-content flex-start
			width 100%
			min-width 2% !important
		&__bar
			cursor pointer
			background mainColor
			width 100%
			display flex
			color rgba(0,0,0,.5)
			box-sizing border-box
			padding 0 5px
			justify-content flex-start
			box-shadow 1.2px 1px 0px 0 #019c90, 2px 2px 0px 0 #019c90, 2px 3px 0px 0 #019c90, 3px 3px 0px 0 #019c90, 3px 4px 0px 0 #019c90, 4px 5px 0px 0 #019c90, 4px 4px 0px 0 #019c90, 4px 5px 0px 0 #019c90
			position relative
			>span
				display flex
				overflow hidden
				flex-direction column
				justify-content center
				white-space nowrap
