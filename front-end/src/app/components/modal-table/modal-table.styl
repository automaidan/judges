.modal_table
	background #FFF
	border 10px solid #e2e2e2
	border-radius 5px
	box-shadow 0 0 5px 4px rgba(0, 0, 0, 0.2)
	position relative
	.close_icon
		position absolute
		top 0
		right 0
		cursor pointer
		opacity 0
		transition all 0.5s
		color #b2b2b2
	&:hover
		.close_icon
			opacity 100
	table
		width 94%
		margin 0 auto
		thead
			tr:first-child
				font-size 1.4em
				color mainColor
				font-weight bold
				td:first-child
					text-transform uppercase
		tr
			padding 0 2em
			border-bottom 1px solid #a4a4a4
			td
				text-align center
			td:first-child
				width 40%
				text-align left
		tbody
			tr:last-child
				border-bottom none
