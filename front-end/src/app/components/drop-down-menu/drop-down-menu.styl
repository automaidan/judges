.page
	width 100vw
	height 100vh
	position fixed
	top 0
	left 0
	z-index 9999
	display none

.drop_down_menu
	display flex
	margin-left 0.5em
	flex-direction column
	cursor pointer
	position relative
	.drop_down_menu__title
		color #d1d1d1
		padding 0.73em 1em
		transition all 0.5s
		border-bottom 1px solid #9e9e9e
		height 3rem
		overflow hidden
		&:hover
			color #fff
			background rgba(255,255,255,0.25)
			border-bottom 1px solid #00e7d5
			box-shadow 0px 2px 3px 1px rgba(0, 0, 0, 0.1)
	.drop_down_menu__content
		display none
		z-index 10000
		position absolute
		width 100%
		max-height 600px
		overflow-y scroll
	&.open
		.drop_down_menu__title
			color #FFF
			background rgba(255,255,255,0.25)
		.drop_down_menu__content
			display block
			background rgba(227, 227, 227, 0.8)
			box-shadow 0px 2px 3px 1px rgba(0, 0, 0, 0.2)
			.drop_down_menu__menu_item
				color tableFontColor
				padding 0.2em 1em
				&:first-child
					font-weight bold
				&:nth-child(odd)
					background rgba(195, 192, 192, 0.49)
				&:hover
					color #FFF
					background #9b9b9b
	@media screen and (max-width: 768px)
		margin-left 0
		margin 1em auto
		&.open
			.drop_down_menu__content
				background rgba(227, 227, 227, 1)
				.drop_down_menu__menu_item
					padding .5em 1em
	@media screen and (max-height: 500px) and (orientation: portrait) //iphone 4
		.drop_down_menu__content
			height 350px
			overflow scroll
	@media screen and (min-height: 500px) and (max-height: 568px) and (orientation: portrait) //iphone 5
		.drop_down_menu__content
			height 370px
			overflow scroll
	@media screen and (min-height: 568px) and (max-height: 667px) and (orientation: portrait) //iphone 6
		.drop_down_menu__content
			height 490px
			overflow scroll
	@media screen and (min-height: 667px) and (max-height: 800px) and (orientation: portrait) //iphone 6plus
		.drop_down_menu__content
			height 570px
			overflow scroll

	@media screen and (min-height: 800px) and (max-height: 1024px) and (orientation: portrait) //IPAD
		.drop_down_menu__content
			height 700px
			overflow scroll

	@media screen and (max-height: 320px) and (orientation: landscape) //iphone 4
		.drop_down_menu__content
			height 260px
			overflow scroll
	@media screen and (min-height: 320px) and (max-height: 370px) and (orientation: landscape) // galaxy s5 +
		.drop_down_menu__content
			height 280px
			overflow scroll
	@media screen and (min-height: 370px) and (max-height: 400px) and (orientation: landscape) // galaxy s5 +
		.drop_down_menu__content
			height 300px
			overflow scroll
	@media screen and (min-height: 400px) and (max-height: 450px) and (orientation: landscape) //iphone 6
		.drop_down_menu__content
			height 340px
			overflow scroll
	@media screen and (min-height: 450px) and (max-height: 768px) and (orientation: landscape) //iphone 6plus
		.drop_down_menu__content
			height 520px
			overflow scroll